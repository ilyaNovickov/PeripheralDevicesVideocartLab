<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="clr-namespace:VideocartLab.ModelVIews;assembly=VideocartLab.ModelVIews"
             x:Class="VideocartLab.Views.Avalonia.NodeView"
			 x:DataType="vm:NodeModelView">
	<Design.DataContext>
		<vm:NodeModelView/>
	</Design.DataContext>
	<Border BorderBrush="Black"
			BorderThickness="2">
		<Panel x:Name="canvas"
				Background="Red"
			   MinHeight="10"
			   MinWidth="10"
			   PointerPressed="Panel_PointerPressed"
			   PointerReleased="Panel_PointerReleased">
			<StackPanel>
				<TextBlock Text="{Binding Name}"/>
				<Panel x:Name="panel2">

				</Panel>
			</StackPanel>
		</Panel>
	</Border>
</UserControl>
