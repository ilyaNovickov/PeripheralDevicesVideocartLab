<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:controls="clr-namespace:VideocartLab.View.Avalonia.Controls;assembly=VideocartLab.View.Avalonia"
             x:Class="VideocartLab.View.Avalonia.Controls.MainCanvas"
			 xmlns:pnz="clr-namespace:Avalonia.Controls.PanAndZoom;assembly=Avalonia.Controls.PanAndZoom">
	<pnz:ZoomBorder MaxZoomX="200"
					MinZoomX="0.2"
					MaxZoomY="200"
					MinZoomY="0.2"
					MaxOffsetX="6000"
					MinOffsetX="-500"
					MaxOffsetY="6000"
					MinOffsetY="-500">
		<Canvas x:Name="canvas" Background="White" Width="5000" Height="5000" PointerPressed="Canvas_PointerPressed">
			<Label Content="HW" Background="Red"/>
		</Canvas>
	</pnz:ZoomBorder>
</UserControl>
