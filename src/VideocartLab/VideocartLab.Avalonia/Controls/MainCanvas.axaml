<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:pnz="clr-namespace:Avalonia.Controls.PanAndZoom;assembly=Avalonia.Controls.PanAndZoom"
             x:Class="VideocartLab.Avalonia.MainCanvas"
			 xmlns:cntr="clr-namespace:VideocartLab.Avalonia;assembly=VideocartLab.Avalonia"
			 >
	<pnz:ZoomBorder >
		<Canvas x:Name="canvas" 
				PointerPressed="Canvas_PointerPressed"
				PointerMoved="Canvas_PointerMoved"
