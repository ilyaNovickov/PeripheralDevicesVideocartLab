<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="clr-namespace:Videocart.ViewModel;assembly=Videocart.ViewModel"
             x:Class="Videocart.Views.AvaloniaProj.NodeView"
			 x:DataType="vm:NodeViewModel">
	<Design.DataContext>
		<vm:NodeViewModel/>
	</Design.DataContext>
	<UserControl.ContextMenu>
		<ContextMenu>
			<MenuItem Header="Удалить" Click="RemoveMenuItem_Click"/>
		</ContextMenu>
	</UserControl.ContextMenu>
	<Border BorderBrush="Black"
			BorderThickness="2"
			Background="White"
			PointerPressed="Border_PointerPressed"
			PointerReleased="Border_PointerReleased">
		<StackPanel>
			<TextBlock Text="HW"
					   Foreground="Black"/>
			<Panel x:Name="innerPanel">
				
			</Panel>
		</StackPanel>
	</Border>
</UserControl>
